---
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <header
      class="bg-gradient-to-r from-yellow-400 to-orange-500 p-6 text-white"
    >
      <nav class="flex justify-between items-center text-2xl font-bold">
        <h1 class="text-3xl text-amber-500">SOLAR</h1>
        <div class="flex gap-8">
          <a href="/" class="hover:text-amber-200 transition text-black"
            >Promotions</a
          >
          <a href="/" class="hover:text-amber-200 transition text-black"
            >Best Sellers</a
          >
        </div>
        <h1 class="text-3xl text-amber-500">BOOST</h1>
      </nav>
    </header>

    <main class="py-10 text-center">
      <h1 class="text-4xl font-bold mb-6">Nuestros Productos</h1>
      <p class="text-lg text-orange-500 mb-4">
        Latas refrescantes para el verano
      </p>

      <div
        id="products"
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8 px-6"
      >
        <div
          class="bg-white rounded-lg shadow-md p-6 transform hover:scale-105 transition"
        >
          <img
            src="/img/llauna default.png"
            alt=""
            class="mx-auto w-3/4 rounded-md"
          />
          <h2 class="text-lg font-semibold mt-4">Summer Punch</h2>
        </div>
        <div
          class="bg-white rounded-lg shadow-md p-6 transform hover:scale-105 transition"
        >
          <img
            src="/img/llauna morada.png"
            alt=""
            class="mx-auto w-3/4 rounded-md"
          />
          <h2 class="text-lg font-semibold mt-4">Wild Summer</h2>
        </div>
        <div
          class="bg-white rounded-lg shadow-md p-6 transform hover:scale-105 transition"
        >
          <img
            src="/img/llauna verde.png"
            alt=""
            class="mx-auto w-3/4 rounded-md"
          />
          <h2 class="text-lg font-semibold mt-4">Green Sun</h2>
        </div>
        <div
          class="bg-white rounded-lg shadow-md p-6 transform hover:scale-105 transition"
        >
          <img
            src="/img/llauna blau.png"
            alt=""
            class="mx-auto w-3/4 rounded-md"
          />
          <h2 class="text-lg font-semibold mt-4">Peach Heat</h2>
        </div>
      </div>
    </main>
    <script>
      document.querySelectorAll("nav a").forEach((link) => {
        link.innerHTML = [...link.textContent]
          .map((char, i) => `<span style="--char-index: ${i};">${char}</span>`)
          .join("");
      });
    </script>
  </body>

  <style>
    @import url("https://fonts.googleapis.com/css2?family=Jersey+15&family=Pixelify+Sans:wght@400..700&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Cal+Sans&family=Outfit:wght@100..900&display=swap");

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      padding: 0;
      font-family: "Outfit", sans-serif;
      background: linear-gradient(to bottom right, #f4c2c2, #ffe0a3, #91c7b1);
      background-attachment: fixed;
      color: #333;
    }

    header {
      background: linear-gradient(to top, #00000000, #ffffff);
      padding: 15px 30px;
      color: white;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    }

    nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      font-family: "Pixelify Sans", cursive;
      font-size: larger;
    }

    .title {
      font-family: "Pixelify Sans", cursive;
      font-size: 34px;
      color: #fff700;
      text-shadow: 2px 2px #ff9a00;
    }

    .aligned {
      text-align: center;
    }

    .subtitle {
      margin-top: 40px;
      font-size: 22px;
      color: #ff8c42;
    }

    #products {
      display: flex;
      flex-wrap: wrap;
      gap: 25px;
      justify-content: center;
      padding: 30px;
    }

    .product {
      background: linear-gradient(145deg, #fff8dc, #d0fffb);
      border-radius: 15px;
      padding: 15px;
      width: 200px;
      height: 300px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      transition:
        transform 0.2s,
        box-shadow 0.2s;
      border: 2px dashed #ffde59;
    }

    .product:hover {
      transform: scale(1.05);
      box-shadow: 0 6px 25px rgba(255, 180, 0, 0.4);
    }

    .product-image {
      width: 70%;
      height: auto;
      margin-bottom: 10px;
      border-radius: 10px;
    }

    .product h2 {
      font-family: "Pixelify Sans", cursive;
      font-size: 18px;
      color: #000000;
      text-shadow: 1px 1px #fff2ac;
    }
  </style>
</html>
