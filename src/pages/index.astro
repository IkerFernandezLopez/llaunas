    @import url("https://fonts.googleapis.com/css2?family=Jersey+15&family=Pixelify+Sans:wght@400..700&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Cal+Sans&family=Outfit:wght@100..900&display=swap");

    header {
      padding: 15px 30px;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    }

    nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      font-family: "Pixelify Sans", cursive;
      font-size: larger;
    }

    #products {
      display: flex;
      flex-wrap: wrap;
      gap: 25px;
      justify-content: center;
      padding: 30px;
    }

    .product {
      border-radius: 15px;
      padding: 15px;
      width: 200px;
      height: 300px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      transition:
        transform 0.2s,
        box-shadow 0.2s;
      border: 2px dashed #ffde59;
    }

    .product:hover {
      transform: scale(1.05);
      box-shadow: 0 6px 25px rgba(255, 180, 0, 0.4);
    }

    .product-image {
      width: 70%;
      height: auto;
      margin-bottom: 10px;
      border-radius: 10px;
    }

    .product h2 {
      font-family: "Pixelify Sans", cursive;
      font-size: 18px;
      color: #000000;
      text-shadow: 1px 1px #fff2ac;
    }
  </style>
