---
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body class="bg-amber-100">
    <header class="p-6 text-white bg-black">
      <nav class="flex justify-between items-center text-2xl font-bold">
        <h1 class="text-3xl text-amber-500">SOLAR</h1>
        <div class="flex gap-8">
          <a href="/" class="hover:text-amber-200 transition text-white"
            >Promotions</a
          >
          <a href="/" class="hover:text-amber-200 transition text-white"
            >Best Sellers</a
          >
        </div>
        <h1 class="text-3xl text-amber-500">BOOST</h1>
      </nav>
    </header>
    <main class="py-10 text-center">
      <section>
        <div class="w-full relative bottom-10">
          <video
            autoplay
            muted
            loop
            class="w-full h-100 object-cover opacity-100"
            style="mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 50%, rgba(0, 0, 0, 0) 100%); -webkit-mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 50%, rgba(0, 0, 0, 0) 100%);"
          >
            <source src="/img/background-video.mp4" type="video/mp4" />
          </video>
          <h1
            class="absolute inset-0 flex items-center justify-center text-orange-500 text-shadow-black text-shadow-lg text-6xl font-bold"
          >
            SOLAR BOOST
          </h1>
        </div>
      </section>
      <section>
        <h1 class="text-4xl font-bold mb-6">Nuestros Productos</h1>
        <p class="text-lg text-orange-500 mb-4">
          Latas refrescantes para el verano
        </p>
        <div
          id="products"
          class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8 px-6"
        >
          <div
            class="bg-white rounded-lg shadow-md p-6 transform hover:scale-105 transition"
          >
            <img
              src="/img/llauna default.png"
              alt=""
              class="mx-auto w-3/4 rounded-md"
            />
            <h2 class="text-lg font-semibold mt-4">Summer Punch</h2>
          </div>
          <div
            class="bg-white rounded-lg shadow-md p-6 transform hover:scale-105 transition"
          >
            <img
              src="/img/llauna morada.png"
              alt=""
              class="mx-auto w-3/4 rounded-md"
            />
            <h2 class="text-lg font-semibold mt-4">Wild Summer</h2>
          </div>
          <div
            class="bg-white rounded-lg shadow-md p-6 transform hover:scale-105 transition"
          >
            <img
              src="/img/llauna verde.png"
              alt=""
              class="mx-auto w-3/4 rounded-md"
            />
            <h2 class="text-lg font-semibold mt-4">Green Sun</h2>
          </div>
          <div
            class="bg-white rounded-lg shadow-md p-6 transform hover:scale-105 transition"
          >
            <img
              src="/img/llauna blau.png"
              alt=""
              class="mx-auto w-3/4 rounded-md"
            />
            <h2 class="text-lg font-semibold mt-4">Peach Heat</h2>
          </div>
        </div>
      </section>
    </main>
  </body>

  <style>
    @import url("https://fonts.googleapis.com/css2?family=Jersey+15&family=Pixelify+Sans:wght@400..700&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Cal+Sans&family=Outfit:wght@100..900&display=swap");

    header {
      padding: 15px 30px;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    }

    nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      font-family: "Pixelify Sans", cursive;
      font-size: larger;
    }

    #products {
      display: flex;
      flex-wrap: wrap;
      gap: 25px;
      justify-content: center;
      padding: 30px;
    }

    .product {
      border-radius: 15px;
      padding: 15px;
      width: 200px;
      height: 300px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      transition:
        transform 0.2s,
        box-shadow 0.2s;
      border: 2px dashed #ffde59;
    }

    .product:hover {
      transform: scale(1.05);
      box-shadow: 0 6px 25px rgba(255, 180, 0, 0.4);
    }

    .product-image {
      width: 70%;
      height: auto;
      margin-bottom: 10px;
      border-radius: 10px;
    }

    .product h2 {
      font-family: "Pixelify Sans", cursive;
      font-size: 18px;
      color: #000000;
      text-shadow: 1px 1px #fff2ac;
    }
  </style>
</html>
