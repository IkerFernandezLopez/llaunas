---
interface Props {
  Content: string;
  ReviewerPic: string;
  ReviewerName: string;
  ReviewerCompany: string;
}

const { Content, ReviewerPic, ReviewerName, ReviewerCompany } = Astro.props;
---

<figure
  class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 max-w-xl mx-auto my-5"
>
  <blockquote>
    <path
      d="M6 0H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3H2a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Zm10 0h-4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3h-1a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Z"
    ></path>
  </blockquote>
  <p class="text-lg text-gray-700 dark:text-gray-200 italic font-medium mb-4">
    {Content}
  </p>
  <figcaption class="flex items-center mt-4">
    <div class="ml-2 justify-center">
      <img src={ReviewerPic} alt="" class="w-24 rounded-4xl ml-5" />
      <div class="text-base font-semibold text-gray-900 dark:text-white">
        {ReviewerName}
      </div>
      <div class="text-sm text-gray-500 dark:text-gray-400">
        {ReviewerCompany}
      </div>
    </div>
  </figcaption>
</figure>
